<Window x:Class="NexTerm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NexTerm"
        Height="450" Width="900"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <!-- Title Bar -->
            <RowDefinition Height="*"/>
            <!-- Output Area -->
            <RowDefinition Height="40"/>
            <!-- Input Bar -->
        </Grid.RowDefinitions>

        <!--  Main Blur Background -->
        <Border Grid.RowSpan="3"
                Background="Black"
                Opacity="0.9"/>

        <!--  Border Frame -->
        <Border Grid.RowSpan="3"
                Background="Transparent"
                BorderThickness="1"
                BorderBrush="White"
                CornerRadius="3"/>

        <!--  Title Bar with Buttons -->
        <DockPanel Grid.Row="0">
            <TextBlock Text="  NexTerm" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="14"/>
            <DockPanel HorizontalAlignment="Right" Margin="0,0,10,0">
                <Button x:Name="Minimize" Background="Transparent" BorderThickness="0" Margin="2" Click="Minimize_Click">
                    <Image Source="/Assets/Images/minus.png" Width="16" Height="16"/>
                </Button>
                <Button x:Name="Maximize" Background="Transparent" BorderThickness="0" Margin="2" Click="ToggleMaximize">
                    <Image Source="/Assets/Images/maximise.png" Width="16" Height="16"/>
                </Button>
                <Button x:Name="CloseButton" Background="Transparent" BorderThickness="0" Margin="2" Click="CloseButton_Click">
                    <Image Source="/Assets/Images/close.png" Width="16" Height="16"/>
                </Button>

            </DockPanel>
        </DockPanel>

        <!-- Output Area -->
        <Border Grid.Row="1" Margin="5" Background="Transparent" BorderBrush="White" BorderThickness="1" CornerRadius="3">
            <Border Grid.Row="1" Margin="5" Background="Transparent" BorderBrush="White" BorderThickness="1" CornerRadius="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- PathBlock -->
                        <RowDefinition Height="*"/>
                        <!-- OutputBox fills remaining -->
                    </Grid.RowDefinitions>

                    <TextBox x:Name="PathBlock"
                 Grid.Row="0"
                 Margin="5,5,5,0"
                 Foreground="White"
                 FontSize="14"
                 FontFamily="Consolas"
                 Background="Transparent"
                 BorderThickness="0"
                 Text="Path Block"
                 IsReadOnly="True"/>

                    <Border Grid.Row="1"
                Margin="5"
                BorderThickness="1"
                BorderBrush="White"
                CornerRadius="3"
                Background="Transparent">
                        <TextBox x:Name="OutputBox"
                     Background="Transparent"
                     Foreground="White"
                     FontFamily="Consolas"
                     FontSize="14"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     BorderThickness="0"
                     Margin="5"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"/>
                    </Border>
                </Grid>
            </Border>
        </Border>

        <!-- Input Box -->
        <DockPanel Grid.Row="2" Margin="10,0,10,5">
            <TextBlock
                x:Name="AnimationCanTypeBox"
                Text=">"
                Foreground="LightGreen"
                Background="Transparent"
                FontFamily="Consolas"
                FontSize="14"
                VerticalAlignment="Center"
                Margin="4,0,5,0"/>
            <Border BorderThickness="0.6"
                    BorderBrush="Wheat"
                    CornerRadius="3"
                    Background="Transparent"
                    Width="Auto"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch">
                <TextBox x:Name="InputBox"
                         Background="Transparent"
                         Foreground="White"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontSize="14"
                         PreviewKeyDown="InputBox_PreviewKeyDown"
                         CaretBrush="White"
                         Margin="3"
                         VerticalContentAlignment="Center"
                         KeyUp="PreviousCommand"/>
            </Border>
        </DockPanel>

    </Grid>
</Window>
