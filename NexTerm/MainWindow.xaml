<Window x:Class="NexTerm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NexTerm"
        Height="500" Width="900"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="MinWidth" Value="4"/>
            <Setter Property="MaxWidth" Value="200"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Background="Transparent"
                        BorderBrush="White"
                        BorderThickness="1"
                        Padding="5,6"
                        CornerRadius="5">
                            <ContentPresenter ContentSource="Header"
                                      HorizontalAlignment="Center"
                                      RecognizesAccessKey="True"/>

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Margin" Value="0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBox" x:Key="TabTextBox">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="SelectionBrush" Value="White"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Name="Border"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="Gray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="TabButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                    x:Name="TabButtonBorder"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="0"
                    CornerRadius="1"
                    Padding="0">
                            <Image Source="/Assets/Images/close.png" Width="15" Height="15"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabButtonBorder" Property="Background" Value="#333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <!-- Title Bar -->
            <RowDefinition Height="35"/>
            <!-- Tabs -->
            <RowDefinition Height="*"/>
            <!-- Output Area -->
            <RowDefinition Height="40"/>
            <!-- Input Bar -->
        </Grid.RowDefinitions>

        <!--  Main Background -->
        <Border Grid.RowSpan="4"
                Background="Black"
                Opacity="0.9"/>

        <!--  Border Frame -->
        <Border Grid.RowSpan="4"
                Background="Transparent"
                BorderThickness="1"
                BorderBrush="White"
                CornerRadius="1"/>

        <!--  Title Bar with Buttons -->
        <Border 
                Grid.Row="0"
                Background="Transparent"
                BorderThickness="0"
                BorderBrush="Transparent"
                CornerRadius="1"
                MouseDown="Window_MouseDown"/>

        <DockPanel  Grid.Row="0">
            <TextBlock Text="  NexTerm" VerticalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="14"/>
            <DockPanel HorizontalAlignment="Right" Margin="0,0,10,0">
                <Button x:Name="Minimize" Background="Transparent" BorderThickness="0" Margin="2" Click="Minimize_Click">
                    <Image Source="/Assets/Images/minus.png" Width="16" Height="16"/>
                </Button>
                <Button x:Name="Maximize" Background="Transparent" BorderThickness="0" Margin="2" Click="ToggleMaximize">
                    <Image Source="/Assets/Images/maximise.png" Width="16" Height="16"/>
                </Button>
                <Button x:Name="CloseButton" Background="Transparent" BorderThickness="0" Margin="2" Click="CloseButton_Click">
                    <Image Source="/Assets/Images/close.png" Width="16" Height="16"/>
                </Button>

            </DockPanel>
        </DockPanel>

        <!-- Tabs -->
        <Line 
            Grid.Row="1"
            X1="0" Y1="0" X2="1" Y2="0"
            Stretch="Fill"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Stroke="White"
            Margin="10,0"
              />
        <TabControl x:Name="TabBlock" Grid.Row="1" Margin="10, 5, 35, 0" Background="Transparent"
                    BorderThickness="0" TabStripPlacement="Top" SelectionChanged="TabBlock_SelectionChanged">
        </TabControl>

        <Button Grid.Row="1"
                HorizontalAlignment="Right"
                Margin="5,0,10,0"
                Width="20"
                Height="20"
                Background="Transparent"
                BorderBrush="Transparent"
                Click="OnAddTabClicked">
            <Border BorderThickness="1" Background="Transparent" BorderBrush="White">
                <Image Source="Assets/Images/arrow.png" Width="15" Height="15" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Button>

            <!-- Output Area -->
        <Border Grid.Row="2" Margin="5, 0, 5, 5" Background="Transparent" BorderBrush="White" BorderThickness="1" CornerRadius="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- PathBlock -->
                    <RowDefinition Height="*"/>
                    <!-- OutputBox fills remaining -->
                </Grid.RowDefinitions>

                <TextBlock x:Name="PathBlock"
                 Grid.Row="0"
                 Margin="5,5,5,0"
                 Foreground="White"
                 FontSize="14"
                 FontWeight="Thin"
                 FontFamily="Consolas"
                 Background="Transparent"
                 Text="Path Block"/>

                <Line 
                Grid.Row="1"
                X1="0" Y1="0" X2="1" Y2="0"
                Stretch="Fill"
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                Stroke="White"
                Margin="5,0"
                  />

                <RichTextBox 
                     x:Name="OutputBox"
                     Background="Transparent"
                     Foreground="White"
                     FontWeight="Thin"
                     FontFamily="Consolas"
                     FontSize="14"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     BorderThickness="0"
                     Margin="5"
                     AcceptsReturn="True"
                     Grid.Row="2">
                </RichTextBox>

            </Grid>
        </Border>

        <!-- Input Box -->
        <DockPanel Grid.Row="3" Margin="10,0,10,5">
            <TextBlock
                x:Name="IsRunningIdecator"
                Text=">"
                Foreground="LightGreen"
                Background="Transparent"
                FontFamily="Consolas"
                FontSize="14"
                FontWeight="Thin"
                VerticalAlignment="Center"
                Margin="4,0,5,0"/>
            <Border BorderThickness="0.6"
                    BorderBrush="Wheat"
                    CornerRadius="1"
                    Background="Transparent"
                    Width="Auto"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch">
                <TextBox x:Name="InputBox"
                         Background="Transparent"
                         Foreground="White"
                         BorderThickness="0"
                         FontFamily="Consolas"
                         FontWeight="Thin"
                         FontSize="14"
                         PreviewKeyDown="InputBox_PreviewKeyDown"
                         CaretBrush="White"
                         Margin="3"
                         VerticalContentAlignment="Center"
                         KeyUp="PreviousCommand"/>
            </Border>
        </DockPanel>

    </Grid>
</Window>
