<Window x:Class="NexTerm.MainWindow"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NexTerm"
        mc:Ignorable="d"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        
        Title="NexTerm" Height="450" Width="800">
    <Grid>
        <Border
            Margin="0"
            Background="Black"
            Opacity="0.7"
        />
        <Border
            Margin="0"
            Background="Transparent"
            BorderThickness="2"
            BorderBrush="White"
            CornerRadius="7"
        />

        <!--TitleBar and Tabs-->
        <DockPanel VerticalAlignment="Top" Height="35">
            <DockPanel Margin="745,10,10,10">
                <Button
                    x:Name="Minimize"
                    Margin="2.5"
                    HorizontalAlignment="Left"
                    Width="10"
                    Height="10"
                    Background="Transparent"
                    Foreground="White"
                    BorderThickness="0"
                    >
                    <Image
                        Source="/Image/minus.png"
                        Width="10"
                        Height="10"/>

                </Button>
                <Button
                    x:Name="Maximize"
                    Margin="2.5"
                    HorizontalAlignment="Left"
                    Width="10"
                    Height="10"
                    Content=" ☐ "
                    Background="Transparent"
                    Foreground="White"
                    Padding="0"
                    FontSize="5"
                    BorderThickness="0"
                    BorderBrush="White">
                </Button>
                <Button
                    x:Name="CloseButton"
                    Margin="2.5"
                    HorizontalAlignment="Left"
                    Width="10"
                    Height="10"
                    Content=" X "
                    Background="Transparent"
                    Foreground="White"
                    Padding="0"
                    FontSize="5"
                    BorderThickness="0"
                    BorderBrush="White"
                    />
            </DockPanel>
        </DockPanel>

        <!--OutPut and Path area-->
        <DockPanel VerticalAlignment="Top" Height="385" Margin="10,35,10,0">
            <Border Background="Transparent" BorderBrush="White" BorderThickness="1" CornerRadius="5"> 
                <StackPanel>
                    <TextBox 
                        x:Name="PathBlock"
                        Margin="5,5,30,0"
                        Foreground="White"
                        FontSize="14"
                        FontFamily="Consolas"
                        Background="Transparent"
                        BorderThickness="1"
                        Text="Path here"
                        />
                    <Border
                        Margin="5,5,5,5"
                        BorderThickness="1"
                        BorderBrush="White"
                        CornerRadius="7"
                        Background="Transparent"
                        Height="360"
>
                        <TextBox 
                            x:Name="OutputBox"
                            Background="Transparent" 
                            Foreground="White"
                            FontFamily="Consolas"
                            FontSize="14"
                            IsReadOnly="True"
                            Margin="4"
                            VerticalScrollBarVisibility="Auto"
                            BorderThickness="0"/>
                    </Border>


                </StackPanel>
            </Border>
        </DockPanel>

        <DockPanel VerticalAlignment="Bottom" Height="30">

            <TextBlock Text=">_" Foreground="White" 
                       Background="Transparent"
                       FontFamily="Consolas" FontSize="14"
                       VerticalAlignment="Center" Margin="10,0,0,0"/>

            <Border Margin="3,5,10,5" BorderThickness="0.6" BorderBrush="Wheat" CornerRadius="3" Background="Transparent">
                <TextBox x:Name="InputBox"
                     Background="Transparent" Foreground="White"
                     BorderThickness="0" FontFamily="Consolas"
                     FontSize="14" PreviewKeyDown="InputBox_PreviewKeyDown"
                     Margin="3"/>
            </Border>   

        </DockPanel>

    </Grid>
</Window>
