<Window x:Class="NexTerm.MainWindow"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NexTerm"
        mc:Ignorable="d"
        
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        
        MouseDown="Window_MouseDown"
        
        Title="NexTerm" Height="450" Width="900">
    <Grid>
        <Border
            Margin="0"
            Background="Black"
            Opacity="0.9"
        />
        <Border
            Margin="0"
            Background="Transparent"
            BorderThickness="1"
            BorderBrush="White"
            CornerRadius="3"
        />

        <!--TitleBar and Tabs-->
        <DockPanel VerticalAlignment="Top" Height="35">
            <DockPanel Margin="730,5,10,5" HorizontalAlignment="Right">
                <Button
                    x:Name="Minimize"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    Width="25"
                    Height="25"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="-1"
                    Click="Minimize_Click"
                    >
                    <Image
                        Source="/Assets/Images/minus.png"
                        Width="16"
                        Height="16"
                        />
                </Button>

                <Button
                    x:Name="CloseButton"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    Width="25"
                    Height="25"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseButton_Click">
                    <Image
                        Source="/Assets/Images/close.png"
                        Width="16"
                        Height="16"/>
                </Button>
            </DockPanel>
        </DockPanel>

        <!--OutPut and Path area-->
        <DockPanel VerticalAlignment="Top" Height="385" Margin="10,35,10,0">
            <Border Background="Transparent" BorderBrush="White" BorderThickness="1" CornerRadius="3">
                <StackPanel>
                    <TextBox 
                        x:Name="PathBlock"
                        Margin="5,5,5,0"
                        Foreground="White"
                        FontSize="10"
                        FontFamily="pack://application:,,,/Assets/Fonts/#Fira Code"
                        Background="Transparent"
                        BorderThickness="1"
                        Text="Path here"
                        IsReadOnly="True"
                        />
                    <Border
                        Margin="5,5,5,5"
                        BorderThickness="1"
                        BorderBrush="White"
                        CornerRadius="3"
                        Background="Transparent"
                        Height="350"
>
                        <TextBox 
                            x:Name="OutputBox"
                            Background="Transparent" 
                            Foreground="White"
                            FontFamily="pack://application:,,,/Assets/Fonts/#Fira Code"
                            FontSize="10"
                            IsReadOnly="True"
                            Margin="8,8,8,8"
                            VerticalScrollBarVisibility="Auto"
                            BorderThickness="0"/>
                    </Border>


                </StackPanel>
            </Border>
        </DockPanel>

        <DockPanel VerticalAlignment="Bottom" Height="30">

            <TextBlock Text=">_" Foreground="White" 
                       Background="Transparent"
                       FontFamily="pack://application:,,,/Assets/Fonts/#Fira Code" FontSize="10"
                       VerticalAlignment="Center" Margin="10,0,0,0"/>

            <Border Margin="3,5,10,5" BorderThickness="0.6" BorderBrush="Wheat" CornerRadius="3" Background="Transparent">
                <TextBox x:Name="InputBox"
                     Background="Transparent" Foreground="White"
                     BorderThickness="0" FontFamily="pack://application:,,,/Assets/Fonts/#Fira Code"
                     FontSize="10" PreviewKeyDown="InputBox_PreviewKeyDown"
                     CaretIndex="0"
                     CaretBrush="White"
                     Margin="3"/>
            </Border>

        </DockPanel>

    </Grid>
</Window>
